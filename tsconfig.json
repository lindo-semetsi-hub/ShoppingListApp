{
    "compileerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["DOM, 'ES2020"],
      "module": "ESNext",
      "skipLibCheck": true,
      "moduleResolution": "bundler",
      "resolveJsonModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "strict": true
    },
    "include": ["src"]
}
